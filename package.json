{
  "name": "e2e_training_wheels",
  "version": "0.0.1",
  "description": "A set of helpers to sipmlify acceptance (e2e) testing using Chai, Mocha and Pupeteer",
  "main": "test/pupeteerHelpers.js",
  "scripts": {
    "test": "superstatic src -p 8080 & mocha test/configuration.js --config test/mocha.opts test ; PORT=8080 npm run stop-test-server ",
    "server": "superstatic src -p 3000",
    "stop-test-server": "lsof -ti tcp:$PORT | xargs kill"
  },
  "author": {
    "name": "Thomas Ochman",
    "email": "thomas@craftacademy.se",
    "url": "https://github.com/tochman"
  },
  "homepage": "https://github.com/tochman/mocha_chai_e2e_testing",
  "repository": {
    "type": "git",
    "url": "https://github.com/tochman/mocha_chai_e2e_testing"
  },
  "keywords": [
    "Puppeteer",
    "E2E",
    "Chai",
    "Mocha",
    "Training",
    "Acceptance tests",
    "Testing"
  ],
  "license": "MIT",
  "dependencies": {
    "chai": "^4.1.2",
    "superstatic": "^5.0.1",
    "mocha": "3.5.3",
    "puppeteer": "^1.4.0"
  }
}
